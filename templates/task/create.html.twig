{% extends 'base.html.twig' %}
{% block title %}Task Create
{% endblock %}

{% block header_title %}
	<h1>Créer Un Tâches
	</h1>
{% endblock %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-12">
			{{ form_start(form, {'action' : path('task_create')}) }}
			{{ form_widget(form) }}

			<button type="submit" value="submit" class="btn btn-success pull-right">Ajouter</button>
			{{ form_end(form) }}

			<a href="{{ path('task_list') }}" class="btn btn-primary">Retour à la liste des tâches</a>
		</div>

	</div>
{% endblock %}
